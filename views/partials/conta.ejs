                          <div class="col-md-12"><label class="labels">Cep</label><input type="text" class="form-control" placeholder="Cep" value=""></div>
                          <div class="col-md-12"><label class="labels">Estado</label><input type="text" class="form-control" placeholder="Estado" value=""></div>
                          <div class="col-md-12"><label class="labels">Profissão</label><input type="text" class="form-control" placeholder="Profissão" value=""></div>
                          <div class="col-md-12"><label class="labels">Data de Nascimento</label><input type="date" class="form-control" placeholder="Data de Nascimento" value=""></div>
                      </div>
                      <div class="row mt-3">
                          <div class="col-md-6"><label class="labels">País</label><input type="text" class="form-control" placeholder="País" value=""></div>
                      </div>
                      <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Salvar Alterações</button></div>
                      <!-- Botão para sair da conta -->
                  <div action="/logout" method="POST">
                    <button type="submit" class="btn btn-danger">Sair da Conta</button required>
                  </div>
                  </div>
              </div>
